{
  "plugins": [
    "prettier"
  ],
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true,
    "jest": true
  },
  "globals": {},
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "babel-plugin-root-import": {
        "rootPathPrefix": "~",
        "rootPathSuffix": "src"
      }
    }
  },
  "rules": {
    // Plugins
    "import/prefer-default-export": "off",

    "prettier/prettier": "off",

    // Possible Errors
    "no-console": "off",

    // Best Practices
    "no-multi-spaces": ["error", { "ignoreEOLComments": true }],

    // Variables

    // no-restricted-globals

    // Node.js and CommonJS

    // Stylistic Issues
    "max-len": "off",
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "no-underscore-dangle": "off",
    "object-curly-newline": ["error", { "consistent": true }]

    // JS.Next
  }
}
